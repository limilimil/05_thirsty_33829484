<!doctype html> 
<html>  
  <head>  
    <title><%=shopName%></title> 
    <link rel="stylesheet" href="/style.css">
  </head>  
  <body>  
    <h1>Customer Survey</h1>
    <form class="survey" action="/survey-result" method="POST">
      <section>
        <div>
          <label for="first">First Name:</label>
          <input id="first" type="text" name="first" required>
        </div>
        <div>
          <label for="last">Last Name:</label>
          <input id="last" type="text" name="last" required>
        </div>
        <div>
          <label for="email">Email:</label>
          <input id="email" type="email" name="email" required>
        </div>
      </section>
      <section>
        <div>
          <label for="age">How old are you?</label> <br>
          <input id="age" type="number" name="age" min="0" max="120" step="1" required>
        </div>
        <div>
        <fieldset>
          <legend>Which of the following drinks categories do you consume?</legend>
            <% for (let i = 0; i < productCategories.length; i++) { %>
              <label for="<%= productCategories[i] %>">
                <input id="<%= productCategories[i] %>" type="radio" name="category" value="<%= productCategories[i] %>" required>
                <%= productCategories[i] %>
              </label>
            <% } %>
        </fieldset>
        </div>
        <div>
          <label for="student">Are you a student?</label> <br>
          <input id="student" type="checkbox" name="student">
        </div>
      </section>
      <div>
        <input type="submit" value="Submit"> 
      </div>
    </form> 
</body>  
</html> 